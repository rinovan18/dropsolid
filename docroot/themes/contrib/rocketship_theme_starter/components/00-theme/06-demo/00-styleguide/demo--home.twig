{% embed "@rocketship-theme-starter-pages/page/_page--master.twig" with {} %}

  {% block pageTabs %}
    {% include "@rocketship-theme-starter-molecules/menus/styleguide/tabs.twig" with {
      menu_block_bem_block: tabs.menu_block_bem_block,
      menu_block_bem_element: tabs.menu_block_bem_element,
      menu_block_bem_modifiers: tabs.menu_block_bem_modifiers,
      menu_block_bem_extra: tabs.menu_block_bem_extra,
      primary: tabs.primary,
      items: tabs.items,
      has_link_title: tabs.has_link_title,
      label: tabs.label,
      configuration: tabs.configuration,
    } %}
  {% endblock %}

  {% block header %}
    {% include "@rocketship-theme-starter-organisms/header/styleguide/header.twig" %}
  {% endblock %}

  {% block pageContent %}
    <!-- System Block: holding the page node -->
    <div class="block block--provider-system block--system-main-block block--region-content block-system" aria-label="Main page content">

       <!-- Page node -->
      {% embed "@rocketship-theme-starter-organisms/00-node/_node.twig" with {
        view_mode: page.view_mode,
        isPromoted: page.isPromoted,
        isSticky: page.isSticky,
        bundle: page.bundle,
      } %}
        {% block node_content %}

          <!-- Layout templates (for Layout Builder):
                in our Drupal front-end, the templates are loaded from the Rocketship Core module, but we can use custom ones as well
                for this Storybook example, I'm loading custom ones that are (almost) identical to the Core ones
                because it's easier than building a path to the modules
          -->

          {# Section: 1 col example with 1 block #}
          {% embed "@rocketship-theme-starter-templates/styleguide/section/one-col.twig" with {
            label: page.content.layouts.header.label,
            variant: page.content.layouts.header.variant,
            region_type: page.content.layouts.header.region_type,
            modifier: page.content.layouts.header.modifier,
            extra_classes: page.content.layouts.header.extra_classes,
            settings: page.content.layouts.header.settings,
            content: page.content.layouts.header.content,
          } %}

            {% block section_content %}

              {# Visual #}
              {# {% include "@rocketship-theme-starter-molecules/visual/styleguide/visual.twig" with {
                label: page.content.blocks.visual.label,
                configuration: page.content.blocks.visual.configuration,
                bem_block_modifiers: page.content.blocks.visual.bem_block_modifiers,
                fields: page.content.blocks.visual.fields,
              } %} #}

            {% endblock %}

          {% endembed %}


          {# Section: 2 cols example with blocks #}
          {% embed "@rocketship-theme-starter-templates/styleguide/section/two-col.twig" with {
            label: page.content.layouts.usp_info.label,
            variant: page.content.layouts.usp_info.variant,
            region_type: page.content.layouts.usp_info.region_type,
            modifier: page.content.layouts.usp_info.modifier,
            extra_classes: page.content.layouts.usp_info.extra_classes,
            settings: page.content.layouts.usp_info.settings,
            content: page.content.layouts.usp_info.content,
          } %}

            {% block first_main %}

              {# {% include "@rocketship-theme-starter-molecules/usp/styleguide/usp.twig" with {
                label: page.content.blocks.usp.label,
                configuration: page.content.blocks.usp.configuration,
                bem_block_modifiers: page.content.blocks.usp.bem_block_modifiers,
                fields: page.content.blocks.usp.fields,
              } %} #}

            {% endblock %}

            {% block second_main %}

              {# {% include "@rocketship-theme-starter-molecules/content/styleguide/content.twig" with {
                label: page.content.blocks.content.label,
                configuration: page.content.blocks.content.configuration,
                bem_block_modifiers: page.content.blocks.content.bem_block_modifiers,
                paragraph: page.content.blocks.content.paragraph,
              } %} #}

            {% endblock %}

          {% endembed %}


          {# Section: 2 cols example with views #}
          {% embed "@rocketship-theme-starter-templates/styleguide/section/two-col.twig" with {
            label: page.content.layouts.blog_event.label,
            variant: page.content.layouts.blog_event.variant,
            region_type: page.content.layouts.blog_event.region_type,
            modifier: page.content.layouts.blog_event.modifier,
            extra_classes: page.content.layouts.blog_event.extra_classes,
            settings: page.content.layouts.blog_event.settings,
            content: page.content.layouts.blog_event.content,
          } %}

            {% block first_main %}

              {# {% include "@rocketship-theme-starter-blog-organisms/styleguide/blog-overview.twig" with {
                label: page.content.blocks.blog.overview.label,
                configuration: page.content.blocks.blog.overview.configuration,
                bem_block_modifiers: page.content.blocks.blog.overview.bem_block_modifiers,
                paragraph: page.content.blocks.blog.overview.paragraph,
                fields: page.content.blocks.blog.overview.fields,
                view: page.content.blocks.blog.overview.view,
                teasers: page.content.blocks.blog.overview.teasers,
              } %} #}

            {% endblock %}

            {% block second_main %}

              {# {% include "@rocketship-theme-starter-event-organisms/styleguide/event-overview.twig" with {
                label: page.content.blocks.event.overview.label,
                configuration: page.content.blocks.event.overview.configuration,
                bem_block_modifiers: page.content.blocks.event.overview.bem_block_modifiers,
                paragraph: page.content.blocks.event.overview.paragraph,
                fields: page.content.blocks.event.overview.fields,
                view: page.content.blocks.event.overview.view,
                teasers: page.content.blocks.event.overview.teasers,
              } %} #}

            {% endblock %}

          {% endembed %}


          {# Section: paragraphs #}
          {% embed "@rocketship-theme-starter-templates/styleguide/section/one-col.twig" with {
            label: page.content.layouts.paragraphs.label,
            variant: page.content.layouts.paragraphs.variant,
            region_type: page.content.layouts.paragraphs.region_type,
            modifier: page.content.layouts.paragraphs.modifier,
            extra_classes: page.content.layouts.paragraphs.extra_classes,
            settings: page.content.layouts.paragraphs.settings,
            content: page.content.layouts.paragraphs.content,
          } %}

            {% block section_content %}

              <div class="storybook__content-section storybook__content-section--layout-builder">
                <div class="text">Paragraphs area</div>
              </div>

            {% endblock %}

          {% endembed %}

        {% endblock %}

      {% endembed %}<!-- // End Page node -->
    </div><!-- // End System Block: holding the page node -->
  {% endblock %}

  {% block pageDoormat %}
    {% include "@rocketship-theme-starter-organisms/footer/styleguide/doormat.twig" with {
      page: doormatData.page,
      branding: doormatData.branding,
    } %}

    {# To include extra block, pass the data like this:
       (don't forget to import it in the stories file)

    {% include "@rocketship-theme-starter-organisms/footer/styleguide/doormat.twig" with {
      page: doormatData.page,
      branding: doormatData.branding,
      menu_sitemap: doormatData.menu_sitemap,
      social: doormatData.social,
      contact: doormatData.contact,
    } %} #}
  {% endblock %}

  {% block pageFooter %}
    {% include "@rocketship-theme-starter-organisms/footer/styleguide/footer--primary.twig" with {
      page: footerPrimaryData.page,
      copyright: footerPrimaryData.copyright,
    } %}

    {# To include extra block, pass the data like this:
       (don't forget to import it in the stories file)

    {% include "@rocketship-theme-starter-organisms/footer/styleguide/footer--primary.twig" with {
      page: footerPrimaryData.page,
      copyright: footerPrimaryData.copyright,
      powered: footerPrimaryData.powered,
      menu_footer_primary: footerPrimaryData.menu_footer_primary,
    } %} #}
  {% endblock %}

{% endembed %}


